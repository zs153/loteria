<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover" />
  <meta http-equiv="X-UA-Compatible" content="ie=edge" />
  <title>Formulario</title>
  <link rel="icon" href="/img/favicon.ico" type="image/x-icon" />
  <!-- styles -->
  <link rel="stylesheet" href="/css/styles.css">
</head>

<body class="antialiased">
  <div class="wrapper">
    <%- include('../../../partials/header') %>
    <%- include('../../../partials/navbar', {opcion: 'FORMULARIO'}) %>
    <div class="page-wrapper">
      <div class="page-body">
        <div class="container-xl">
          <div class="row">
            <div class="col-12">
              <div class="card">
                <form action="" id="upd" method="POST" onsubmit="return validate();">
                  <input type="hidden" id="idsmss" name="idsmss" value="<%- datos.sms.IDSMSS %>">
                  <input type="hidden" id="idform" name="idform" value="<%- datos.formulario.IDFORM %>">
                  <div class="card-header">
                    <h3 class="card-title">Mensaje</h3>
                  </div>
                  <div class="card-body">
                    <div class="row">
                      <div class="col-4">
                        <div class="mb-1">
                          <div class="input-control required">
                            <label class="form-label required">Movil</label>
                            <input type="text" name="movsms" id="movsms" class="form-control" style="text-transform: uppercase;"
                              value="<%- datos.sms.MOVSMS %>" readonly />
                            <div class="invalid-feedback"></div>
                          </div>
                        </div>
                      </div>
                      <div class="col-8">
                        <div class="mb-1">
                          <div class="input-control required">
                            <label class="form-label required">Texto</label>
                            <textarea type="text" name="texsms" id="texsms" class="form-control" rows="3"
                              style="resize: vertical"><%- datos.sms.TEXSMS %></textarea>
                            <div class="invalid-feedback"></div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="card-footer text-end">
                    <div class="d-flex">
                      <input class="btn btn-white" action="action" onclick="window.history.go(-1); return false;" type="submit" value="Volver" />
                      <button type="submit" class="btn btn-success ms-auto" id="btnUpdate">Actualizar mensaje</button>
                    </div>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <%- include('../../../partials/footer') %>
  </div>

  <script src="/js/ayuda.min.js"></script>
  <script src="/js/user/addEditSms.min.js"></script>
  <script>
    const elemUpd = document.getElementById('upd');
    elemUpd.setAttribute('action', `/user/formularios/smss/update?part=${getCookie('filtro')}`)
  </script>
</body>

</html>